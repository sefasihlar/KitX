@using NLayer.Core.Concreate
@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div id="zoomupModal" class="modal animated zoomInUp custo-zoomInUp" role="dialog">

            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content ">

                    <div class="modal-header">
                        <h5 class="modal-title">Prroje Kayıt</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form asp-controller="Deal" asp-action="Create" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12">

                                    <div class="row mb-12">
                                        <div class="col">
                                            <div class="input-group">
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row mb-4">
                                        <div class="col-8">
                                            <div class="input-group">
                                                <div class="input-group-text">
                                                    <i class="bi bi-person">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                                        </svg>
                                                    </i>
                                                </div>
                                                <input type="text" class="form-control" name="DealType" id="inlineFormInputGroupUsername" placeholder="ÖR.Bakım Anlaşması">
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <label class="visually-hidden" for="inlineFormInputGroupUsername">Durum</label>
                                            <div class="input-group">
                                                <select class="form-select" name="Status" aria-label="Default select example">
                                                    <option selected>-Durum-</option>
                                                    <option value="Tamamlandı">Tamamlandı</option>
                                                    <option value="Beklemede">Beklemede</option>
                                                    <option value="Devam Ediyor">Devam Ediyor</option>
                                                    <option value="İptal">İptal</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br />
                                    </div>
                                    <div class="row">

                                        <div class="col-6">
                                            <span>Başlama Tarihi</span>
                                            <div class="form-group mb-0">
                                                <input id="rangeCalendarFlatpickr" name="StartedDate" class="form-control flatpickr flatpickr-input active" type="date" placeholder="Tarih Seçiniz">
                                            </div>
                                        </div>

                                        <div class="col-6">
                                            <span>Bitiş Tarihi</span>
                                            <div class="form-group mb-0">
                                                <input id="rangeCalendarFlatpickr" name="EndDate" class="form-control flatpickr flatpickr-input active" type="date" placeholder="Tarih Seçiniz">
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="container text-center">
                                        <label for="custom-file-upload" class="filupp" style="width:50%">
                                            <span class="filupp-file-name js-value mr-5">Dosya Seç</span>
                                            <input type="file" name="file" id="custom-file-upload" onchange="showFileName(this)" />
                                            <div class="upload-icon ml-5">
                                                <i class="fas fa-cloud-upload-alt"></i>
                                            </div>
                                        </label>
                                        <div class="upload-status">
                                            <div class="upload-progress"></div>
                                            <div class="file-info"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer md-button">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <br />
        <div class="middle-content container-xxl p-0">
            <form asp-controller="QRCode" asp-action="CreateQrCode" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-2">
                        <label class="visually-hidden" for="inlineFormInputGroupUsername">Sayı Seç</label>
                        <div class="input-group">
                            <select class="form-select" name="length" aria-label="Default select example">
                                <option selected>-Kaç Adet-</option>
                                <option value="10">10</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                                <option value="500">500</option>
                                <option value="1000">1000</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-primary">QR Code Oluştur</button>
                    </div>
                </div>
            </form>
            <br />
            <br />

            <div class="row layout-spacing" asp-controller="" asp-action="">
                <div class="col-lg-12">
                    <div class="statbox widget box box-shadow">
                        <div class="widget-content widget-content-area">
                            <table id="style-3" class="table style-3 dt-table-hover">
                                <thead>
                                    <tr>
                                        <th class="checkbox-column text-center"> ID </th>

                                        <th>Seri Numarası</th>
                                        <th>Kod</th>
                                        <th>Eklenme Tarihi</th>
                                        <th>Güncelleme Tarihi</th>
                                        <th class="text-center">Durum</th>
                                        <th class="text-center dt-no-sorting">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="checkbox-column text-center"> HXT-@item.Id </td>

                                            <td>@item.SerialNumber</td>
                                            <td>@item.Code</td>

                                            <td>
                                                <span class="inv-date">
                                                    <svg xmlns="http://www.w3.org/2000/svg" style="color:dodgerblue" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar">
                                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                                    </svg>
                                                    @DateTime.Parse(item.CreatedDate.ToString()).ToString("dd MMM yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="inv-date">
                                                    <svg xmlns="http://www.w3.org/2000/svg" style="color:dodgerblue" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar">
                                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                                    </svg>
                                                    @DateTime.Parse(item.CreatedDate.ToString()).ToString("dd MMM yyyy")
                                                </span>
                                            </td>

                                            @if (item.Condition==true)
                                            {
                                                <td class="text-center"><span class="shadow-none badge badge-success">Aktif</span></td>
                                            }


                                            else
                                            {
                                                <td class="text-center"><span class="shadow-none badge badge-danger">Pasif</span></td>
                                            }

                                            <td class="text-center">
                                                <ul class="table-controls">
                                                    <li><a href="javascript:void(0);" class="bs-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" data-original-title="Edit"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 p-1 br-8 mb-1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                                                    <li><a href="/Deal/Delete/@item.Id" class="bs-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" data-original-title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash p-1 br-8 mb-1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path></svg></a></li>
                                                    <li><a href="/QRCodePng/@item.ImageUrl" class="bs-tooltip" data-bs-toggle="tooltip" data-bs-placement="top" title="İndir" data-original-title="İndir" download="KitX-@item.ImageUrl"><img src="/cork-v3.8.0/QrCode.png" style="width:24px;height:24px" /></a></li>

                                                </ul>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    </
                </div>

            </div>

        </div>

        <!--  BEGIN FOOTER  -->
        <div class="footer-wrapper">
            <div class="footer-section f-section-1">
                <p class="">Copyright © <span class="dynamic-year">2022</span> <a target="_blank" href="https://designreset.com/cork-admin/">DesignReset</a>, All rights reserved.</p>
            </div>
            <div class="footer-section f-section-2">
                <p class="">Coded with <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg></p>
            </div>
        </div>
        <!--  END CONTENT AREA  -->
    </div>



